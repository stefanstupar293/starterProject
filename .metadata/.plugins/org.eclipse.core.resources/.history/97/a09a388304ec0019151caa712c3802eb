package com.gmail.stefan.backend.dbservices;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;


public class TestDBConnection {
	 
	public static void main (String[] args) throws SQLException {
		System.out.println("Connecting...");
		 	
			Connection con = DriverManager.getConnection("jdbc:mysql://46.4.55.195:3306/?serverTimezone=UTC#/todo", "root", "komkom");
//			Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/todo", "root", "komkom");
//			Connection con = DriverManager.getConnection("java:/comp/env/jdbc/todo", "root", "komkom");
			System.out.println("Connection succsessful!");
			Statement st = con.createStatement();
			System.out.println("Statement succsessful!");
			
			ResultSet rs = st.executeQuery("select firstname from author where id=28");
			
			String name = "";
			
			while(rs.next()) {
				
			int id = rs.getInt("id");
			name = rs.getString("firstname");
			System.out.println(id+ " "+name);
			}
			
			st.close();
			con.close();
	}
	
	
}


