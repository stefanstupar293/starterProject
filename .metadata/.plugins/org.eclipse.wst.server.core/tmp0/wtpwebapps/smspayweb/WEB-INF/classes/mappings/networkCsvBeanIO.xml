<beanio xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.beanio.org/2012/03"
        xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">

    <stream name="networkStream" format="csv">
        <parser>
            <property name="delimiter" value=";"/>
            <property name="alwaysQuote" value="true"/>
            <property name="unquotedQuotesAllowed" value="false"/>
        </parser>
        <record name="network_header" order="1" class="com.mnocompany.smspay.backend.model.mccmnc.Network" minOccurs="1" maxOccurs="1">
            <field name="id"  ignore="true" literal="Id"/>
            <field name="name" ignore="true" literal="Name"/>
            <field name="operator" ignore="true" literal="Operator"/>
            <field name="primaryMNC" ignore="true" literal="PrimaryMNC"/>
            <field name="countryId" ignore="true" literal="CountryId"/>
        </record>
        <record name="network" order="2" class="com.mnocompany.smspay.backend.model.mccmnc.Network" minOccurs="0" maxOccurs="unbounded">
            <field name="id"  regex="^[0-9]*$"/>
            <field name="name"  type="string" />
            <field name="operator"  type="string"  />
            <field name="primaryMNC"  regex="^[0-9]*$"/>
            <field name="countryId" regex="^[0-9]*$"/>
        </record>

    </stream>

</beanio>